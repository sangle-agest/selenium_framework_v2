<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="HealeniumDemoSuite" verbose="1" parallel="false">
    <test name="HealeniumDemo" preserve-order="true">
        <classes>
            <class name="com.myorg.tests.healenium.HealeniumDemoTest">
                <!-- First run tests on original page to establish baseline -->
                <methods>
                    <include name="testOriginalPageFormSubmission"/>
                    <include name="testOriginalPageNavigation"/>
                    <include name="testOriginalPageDynamicItems"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="HealeniumHealingDemo" preserve-order="true">
        <classes>
            <class name="com.myorg.tests.healenium.HealeniumDemoTest">
                <!-- Then run same tests on modified page to demonstrate healing -->
                <methods>
                    <include name="testModifiedPageFormSubmissionWithHealing"/>
                    <include name="testModifiedPageNavigationWithHealing"/>
                    <include name="testModifiedPageDynamicItemsWithHealing"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>