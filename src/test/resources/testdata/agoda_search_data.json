{
  "testCases": {
    "tc01_da_nang_family_search": {
      "testCaseId": "TC01",
      "testName": "Search and Sort Hotel Successfully",
      "description": "Search hotels in Da Nang for family travelers and sort by lowest prices",
      "searchCriteria": {
        "destination": "Da Nang",
        "checkInDate": "next_friday_plus_3",
        "numberOfNights": 2,
        "rooms": 2,
        "adults": 4,
        "children": 0,
        "travelerType": "Family Travelers"
      },
      "expectedResults": {
        "destinationVerification": "Da Nang",
        "minimumHotelsToVerify": 5,
        "sortingOption": "lowest_prices",
        "expectedUrl": "https://www.agoda.com/search?city=16440",
        "urlContains": ["city=16440", "rooms=2", "adults=4"]
      },
      "testSteps": [
        {
          "step": 1,
          "action": "Navigate to homepage",
          "description": "Navigate to https://www.agoda.com/",
          "expected": "Agoda homepage is displayed"
        },
        {
          "step": 2,
          "action": "Search hotel",
          "description": "Search hotel with Da Nang, 3 days from next Friday, 2 rooms, 4 adults",
          "expected": "Search result page shows hotels in Da Nang"
        },
        {
          "step": 3,
          "action": "Verify search results",
          "description": "Verify search result is displayed",
          "expected": "First 5 hotels listed correctly with Da Nang as destination"
        },
        {
          "step": 4,
          "action": "Sort hotels",
          "description": "Sort hotels by lowest prices",
          "expected": "First 5 hotels re-ordered by ascending price, still showing Da Nang"
        }
      ]
    }
  }
}